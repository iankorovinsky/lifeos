{
  "name": "lifeos-monorepo",
  "version": "0.1.0",
  "packageManager": "bun@1.3.4",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "node tools/scripts/dev-tui.js",
    "dev:parallel": "turbo run dev --parallel --output-logs=full",
    "build": "turbo run build --output-logs=full",
    "lint": "turbo run lint --output-logs=full",
    "test": "turbo run test --parallel --output-logs=full",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\" --ignore-path .gitignore",
    "fmt": "bun format",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\" --ignore-path .gitignore",
    "db:generate": "turbo run generate --filter=@lifeos/db",
    "db:migrate": "turbo run migrate:dev --filter=@lifeos/db",
    "db:studio": "turbo run studio --filter=@lifeos/db",
    "db:format": "turbo run format --filter=@lifeos/db"
  },
  "devDependencies": {
    "prisma": "^6.0.0",
    "@prisma/client": "^6.0.0",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "dotenv-cli": "^7.4.2",
    "prettier": "^3.5.3",
    "turbo": "^2.3.3"
  }
}
